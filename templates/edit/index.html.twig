{% extends 'base.html.twig' %}

{% block title %}{{ article.nom }}{% endblock %}

{% block body %}
    <h1>{{ article.nom }}</h1>
    
    {% if article.image %}
        <img src="{{ article.image }}" alt="{{ article.nom }}" style="max-width: 500px; height: auto;">
    {% endif %}

    <p><strong>Description :</strong> {{ article.description|default('Pas de description') }}</p>
    <p><strong>Prix :</strong> {{ article.prix }} €</p>
    <p>Publié le {{ article.datePublication|date('d/m/Y') }}</p>

    <a href="{{ path('app_account') }}">Retour à mon compte</a>
{% endblock %}
