{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block stylesheets %}
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Fichier CSS personnalisé -->
    <link rel="stylesheet" href="CSS/register.css">
{% endblock %}

{% block body %}
<header class="header">
    <div class="header-container">
        <div class="auth-links">
            <a href="/login">Login</a>
            <a href="/register">Register</a>
        </div>
        <div class="header-content">
            <h1>Bienvenue sur notre boutique de chaussures</h1>
            <p>Découvrez nos dernières collections</p>
        </div>
    </div>
</header>

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="p-4 bg-light rounded shadow text-center" style="width: 350px;">
        <h1 class="h3 mb-3">Inscription</h1>

        {{ form_start(registrationForm) }}

            <div class="mb-3 text-start">
                {{ form_label(registrationForm.username, 'Nom d\'utilisateur', {'class': 'form-label'}) }}
                {{ form_widget(registrationForm.username, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="mb-3 text-start">
                {{ form_label(registrationForm.email, 'Email', {'class': 'form-label'}) }}
                {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="mb-3 text-start">
                {{ form_label(registrationForm.plainPassword, 'Mot de passe', {'class': 'form-label'}) }}
                {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="form-check mb-3 text-start">
                {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                {{ form_label(registrationForm.agreeTerms, 'J\'accepte les termes et conditions', {'class': 'form-check-label'}) }}
            </div>

            <button type="submit" class="btn btn-primary w-100">S'inscrire</button>

        {{ form_end(registrationForm) }}

        <p class="mt-3">Déjà un compte ? <a href="/login" class="btn btn-secondary w-100">Se connecter</a></p>
    </div>
</div>
{% endblock %}